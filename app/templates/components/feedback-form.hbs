<div class="feedback-box p-2">
  {{#if showsThanks}}
    <div class="text-header--feedback text-orange-500 py-4">Thanks for the feedback!</div>
  {{else}}
    <div class="text-header--feedback text-black">Were our suggestions helpful?</div>
    <div class="text-center space-x-4 mt-2">
      <button onclick={{action "sendPositiveFeedback"}} class="link link-feedback">Yes</button>
      <button {{action "toggleFeedbackModal"}} class="link link-feedback">Somewhat</button>
      <button {{action "toggleFeedbackModal"}} class="link link-feedback"> No</button>
    </div>
  {{/if}}
</div>

{{#if showingFeedbackModal}}
  {{#modal-dialog
    onClose=(action "toggleFeedbackModal")
    targetAttachment="center"
  }}
    <h1 class="text-header--feedback text-lg pt-2">Were our suggestions helpful?</h1>
    <div class="text-center font-roboto text-black pb-2">You answered: <span class="text-answer--feedback">{{this.generalFeedbackScore}}</span></div>


      <FeedbackFormQuestions
        @imageId={{this.imageId}}
        @submit={{action 'submit'}}
        @rollback={{action 'rollback'}} />

  {{/modal-dialog}}
{{/if}}
